{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      // https://www.gaige.net/renovating-git-tags.html
      "customType": "regex",
      "fileMatch": [
        "(^|/)\\.gitmodules$"
      ],
      "datasourceTemplate": "git-tags",
      "matchStrings": [
        "url = (?<depName>.*?)#(?<currentValue>.*?)\\s"
      ],
      "versioningTemplate": "semver",
      "depTypeTemplate": "dependencies"
    }
  ],
  "git-submodules": {
    "enabled": false // https://www.gaige.net/renovating-git-tags.html
  }
}
